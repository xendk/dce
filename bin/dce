#!/usr/bin/env ruby

# frozen_string_literal: true

require 'yaml'
if ENV['COVERAGE']
  require 'simplecov'
  SimpleCov.print_error_status = false

  # Redefine exec to save coverage first.
  module Kernel
    alias exec_real exec

    def exec(command)
      SimpleCov.result
      exec_real command
    end
  end

  SimpleCov.at_exit do
    SimpleCov.result
  end
end

# Possibly not the right way to load file.
require_relative '../lib/dce'

app = DCE.new
app.run
